
<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
      <h1>Cocktail</h1>
        <%= simple_form_for instance do |f| %>
          <%= f.input :name %>
          <%= f.input :image%>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <div class="d-flex mb-3">
          <% @cocktail.photos.each do |photo| %>
               <%= cl_image_tag photo.key, height: 40, width: 40, crop: :thumb %>
          <%end %>
          </div>
          <%= f.button :submit, "Save Cocktail", class: "btn  btn-outline-primary"%>
          <% if params[:id].present? %>
            <%= link_to "Cancel", cocktail_path(instance), class: "btn btn-outline-danger"%>
          <% else %>
            <%= link_to "Cancel", cocktails_path, class: "btn btn-outline-danger"%>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
